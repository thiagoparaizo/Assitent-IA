# Aplicação
PROJECT_NAME="Dental Assistant API"
DEBUG=True
SECRET_KEY="sua-chave-secreta-muito-segura"

# Banco de dados
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=assistant

# Serviço WhatsApp
WHATSAPP_SERVICE_URL=http://localhost:8080

# Autenticação - IMPORTANTE: não preenhcer para desabilitar autenticação
WHATSAPP_SERVICE_AUTH_USERNAME=
WHATSAPP_SERVICE_AUTH_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Configurações de Email para notificações
EMAIL_FROM=no-reply@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Configurações de Memória
MEMORY_ENABLED=true
MEMORY_USE_LOCAL_STORAGE=true
MEMORY_DB_PATH=./storage/memorydb